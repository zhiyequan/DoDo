<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Layout Styles-->
    <style name="match_parent_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_parent_layout_with_margin" parent="match_parent_layout">
    <item name="android:layout_margin">@dimen/default_padding</item>

    </style>

    <style name="wrap_content">
    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_content_layout_with_margin" parent="wrap_content">
    <item name="android:layout_margin">@dimen/default_padding</item>

    </style>

    <style name="match_parent_and_wrap_content">
    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_parent_and_wrap_content_with_padding" parent="match_parent_and_wrap_content">
        <item name="android:layout_margin">@dimen/default_padding</item>
    </style>

    <!--Text Styles-->
    <style name="black_text" parent="wrap_content_layout_with_margin">
    <item name="android:textColor">@color/black</item>
    </style>

    <style name="white_text" parent="wrap_content_layout_with_margin">
    <item name="android:textColor">@color/white</item>
    </style>

    <style name="headline_text_white" parent="white_text">
        <item name="android:textSize">@dimen/headline_text_size</item>
    </style>

    <style name="headline_text" parent="black_text">
        <item name="android:textSize">@dimen/headline_text_size</item>
    </style>

    <style name="title_text" parent="black_text">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle_text" parent="black_text">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="body_text" parent="black_text">
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="bold_body_text" parent="body_text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="caption_text" parent="black_text">
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="menu_text" parent="black_text">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="button_text" parent="black_text">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Button Styles-->
    <style name="button" parent="button_text">
    </style>

    <style name="set_button" parent="match_parent_and_wrap_content_with_padding">
    <item name="android:background">#FFFFFFFF</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="transparent_button" parent="button">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="transparent_button_wide" parent="transparent_button">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="orange_button" parent="transparent_button">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="rounded_rectangle_button" parent="button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape</item>
    </style>

    <style name="match_parent_rounded_rectangle_button" parent="rounded_rectangle_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>

    </style>

    <!--Title Bar Style-->
    <style name="title_bar" parent="headline_text">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:background">@color/blue</item>
    </style>

    <!--Picture Styles-->
    <style name="extreme_small_picture">
        <item name="android:layout_width">@dimen/extreme_small_picture_size</item>
        <item name="android:layout_height">@dimen/extreme_small_picture_size</item>
    </style>

    <style name="small_picture">
        <item name="android:layout_width">@dimen/small_picture_size</item>
        <item name="android:layout_height">@dimen/small_picture_size</item>
    </style>

    <style name="avatar" parent="small_picture">
    </style>

    <style name="medium_picture">
        <item name="android:layout_width">@dimen/medium_picture_size</item>
        <item name="android:layout_height">@dimen/medium_picture_size</item>
    </style>

    <!--Themes-->
    <style name="AppTheme" parent="BaseTheme"/>

    <style name="BaseTheme" parent="android:Theme.Holo.Light.NoActionBar">

        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/theme_default_primary</item>
        <item name="colorPrimaryDark">@color/theme_default_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:windowBackground">@color/theme_window_background</item>

        <item name="android:alertDialogTheme">@style/BaseTheme.Dialog</item>
    </style>

    <style name="BaseTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/theme_default_primary</item>
        <item name="colorPrimaryDark">@color/theme_default_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>


</resources>