<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            style="@style/title_bar">

        <Button
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:id="@+id/backset"
                android:singleLine="false"
                android:background="@drawable/backicon"
                android:textSize="48sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/set_alltitle"
                android:id="@+id/textView2"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFFFF"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <RelativeLayout style="@style/set_button"
            android:id="@+id/newmesset">

            <TextView style="@style/set_item_title"
                android:text="新消息提醒"/>
        </RelativeLayout>

        <RelativeLayout style="@style/set_button"
            android:id="@+id/nodisturbset">

            <TextView style="@style/set_item_title"
                android:text="勿扰模式"/>
        </RelativeLayout>

        <RelativeLayout style="@style/set_button"
            android:id="@+id/chatset">

            <TextView style="@style/set_item_title"
                android:text="聊天"/>
        </RelativeLayout>

        <RelativeLayout style="@style/set_button"
            android:id="@+id/privacyset">

            <TextView style="@style/set_item_title"
                android:text="隐私"/>
        </RelativeLayout>

        <RelativeLayout style="@style/set_button"
            android:id="@+id/normalset">

            <TextView style="@style/set_item_title"
                android:text="通用"/>
        </RelativeLayout>

        <RelativeLayout style="@style/set_button"
            android:id="@+id/safetyset">

            <TextView style="@style/set_item_title"
                android:text="安全"/>
        </RelativeLayout>

        <RelativeLayout style="@style/set_button"
            android:id="@+id/aboutset">

            <TextView style="@style/set_item_title"
                android:text="关于"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
            style="@style/match_parent_and_wrap_content"
            android:background="#FFFF0000"
            android:textColor="#FFFFFFFF"
            android:text="@string/zhuxiao"
            android:id="@+id/zhuxiao"
            android:textSize="18sp"
            android:layout_marginTop="30dp"/>

</LinearLayout>