<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/bottom_bar_color"
        android:layout_gravity="bottom"
        android:baselineAligned="true"
        tools:context=".MainActivity"
        android:showDividers="none">

    <LinearLayout
            android:id="@+id/tab_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:onClick="onTabClick">

        <ImageView
                android:src="@drawable/tab_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/info_textView"
                android:text="@string/tab_info"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/tab_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:onClick="onTabClick">

        <ImageView
                android:src="@drawable/tab_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/message_textView"
                android:text="@string/tab_messages"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/tab_friends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:saveEnabled="false"
            android:onClick="onTabClick">

        <ImageView
                android:src="@drawable/tab_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/friends_textView"
                android:text="@string/tab_friends"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/tab_personal_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/default_padding"
            android:saveEnabled="false"
            android:onClick="onTabClick">

        <ImageView
                android:src="@drawable/tab_personal_center"
                android:layout_width="@dimen/extreme_small_picture_size"
                android:layout_height="@dimen/extreme_small_picture_size"
                android:scaleType="fitXY"/>

        <TextView
                android:id="@+id/personal_center_textView"
                android:text="@string/tab_personal_center"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>

