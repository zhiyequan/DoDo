<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <io.rong.imkit.view.PinnedHeaderListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_to_dip_16"
            android:layout_marginRight="@dimen/px_to_dip_16"
            android:divider="@color/dividers"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="true"
            android:scrollbars="none" />

        <io.rong.imkit.view.SwitchGroup
            android:id="@android:id/message"
            android:layout_width="@dimen/px_to_dip_50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            app:orientation="vertical"
            app:pinned_item="@layout/rc_pinned_item"
            app:pinned_item_array="@array/rc_search_letters" />
        <!--
        android:paddingTop="@dimen/px_to_dip_20"
        android:layout_marginTop="@dimen/px_to_dip_96"
        -->


    </RelativeLayout>


</LinearLayout>