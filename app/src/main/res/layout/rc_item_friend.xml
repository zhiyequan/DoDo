<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="fill_vertical">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_padding"

            android:orientation="horizontal">

        <CheckBox
                android:id="@android:id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_to_dip_16"
                android:button="@drawable/rc_checkbox_selector"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:maxHeight="10.0dip"
                android:visibility="gone"/>

        <io.rong.imkit.view.AsyncImageView
                android:id="@android:id/icon"
            android:layout_width="@dimen/px_to_dip_75"
            android:layout_height="@dimen/px_to_dip_75"
                android:layout_marginBottom="@dimen/px_to_dip_16"
                android:layout_marginLeft="@dimen/px_to_dip_10"
                android:layout_marginTop="@dimen/px_to_dip_16"
            app:defDrawable="@drawable/rc_default_portrait"
            app:shape="square" />
    </LinearLayout>

    <TextView
            android:id="@android:id/text1"
        style="@style/subtitle_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_to_dip_18"
            android:layout_marginRight="@dimen/px_to_dip_30"
            android:layout_weight="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>