        <service
                android:name="io.rong.imkit.service.RongIMService"
                android:enabled="true"
                android:exported="false"
                android:priority="1000"/>
        <service
                android:name="io.rong.imlib.PushService"
                android:process="io.rong.push.service"/>
        <service android:name="io.rong.imlib.RongService"/>

        <receiver
                android:name="io.rong.imlib.PushReceiver"
                android:process="io.rong.push.service">
            <intent-filter>
                <action android:name="io.rong.imlib.action.push.heartbeat"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <!-- End Rong Cloud -->
        <activity
                android:name=".info_detail.InfoDetailActivity"
                android:label="@string/title_activity_info_detail_acitivty">
        </activity>
    </application>

</manifest>
